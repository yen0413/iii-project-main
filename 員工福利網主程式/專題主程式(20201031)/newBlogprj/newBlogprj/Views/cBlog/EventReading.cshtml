    <script>

        var flag = '@Model.LikeCheck';
        $('#comment').click(function () {
            if (flag == "True") {
                $('.like').hide();
                $('.nolike').show();
                flag = 'False';
            } else {
                $('.like').show();
                $('.nolike').hide();
                flag = 'True';
            }
            CommentThisEvent(flag);
        });

        function CommentThisEvent(flag) {
             $.ajax({
                    type: 'POST',
                    url: '@Href("~/cBlog/EventComment")',
                    data: { Event_ID: @Model.Event_ID    },
                    dataType:'text',//回傳值型別
                    success: function (msg) {
                        if (msg == '') {
                            if (flag == "True") {
                                swal('已按讚');
                            } else if (flag == "False") {
                                swal('已取消');
                            }
                        }
                    }, error:function() {

                    }
                });
        }
    </script>

    <script>
        $('#join').click(function () {
                MyAlert();
            });
        function MyAlert() {
                swal({
                    title: "確定報名?",
                    text: "",
                    icon: "warning",
                    buttons: true,
                    dangerMode: false,
                })
                    .then((willJoin) => {
                        if (willJoin) {
                            JoinEvent();  //報名活動
                        } else {
                            swal("已取消!");
                        }
                });
            }


            //報名活動
            function JoinEvent() {
                $.ajax({
                    type: 'POST',
                    url: '@Href("~/cBlog/JoinEvent")',
                    data: { Event_ID: @Model.Event_ID },
                    dataType: 'text',//回傳值型別
                    success: function (msg) {
                        if (msg == '') {
                                swal("報名成功!", {
                                    icon: "success"
                                }).then((ok) => {
                                    if (ok) {
                                      window.location.href = '@Href("~/cBlog/BookingListView")';
                                    }
                                });

                        } else {
                            swal(msg);
                        }
                    }, error:function() {

                    }
                });
            }
    </script>
