    <script>
        $("#twzipcode").twzipcode({
            zipcodeIntoDistrict: true,
            css: ["city form-control; width: 30px", "town form-control; width: 30px"],
            countyName: "city",
            districtName: "town"
        });

        $(".city").change(function () {
            $("#srt").val($(".city").val() + $(".town").val());
        })

        $(".town").change(function () {
            $("#srt").val($(".city").val() + $(".town").val());
            $("#location").removeAttr('disabled');
        })
        $("#location").change(function () {
            $("#srt").val($(".city").val() + $(".town").val() + $("#location").val());
            $(".form-control").removeAttr('disabled');
        })
        $('#submit').click(function () {
            $(".form-control").removeAttr('disabled');
        });
        function goBack() {
            window.history.back();
        }
    </script>
