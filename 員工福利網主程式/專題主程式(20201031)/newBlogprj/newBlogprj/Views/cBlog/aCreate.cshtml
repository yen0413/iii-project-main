                            @Html.TextAreaFor(model => model.EventContent, new { htmlAttributes = new { @class = "form-control", @required = "required", rows = "10", cols = "20" } })
                            @Html.ValidationMessageFor(model => model.EventName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div style="clear:both;">
                            活動地點
                        </div>
                        <div id="twzipcode" style="margin-left: 16px;float:left;">

                        </div>
                        <div style="margin-left: 16px;float:left;">
                            <input type="text" id="location" placeholder="請輸入地點名稱" disabled="disabled">
                        </div>

                        <div class="col-md-10" style="clear: both;">
                            @Html.EditorFor(model => model.EventLocation, new { htmlAttributes = new { @class = "form-control", disabled = "disabled", id = "srt", @required = "required" } })
                            @Html.ValidationMessageFor(model => model.EventLocation, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        活動開始日期
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.EventStartDate, new { htmlAttributes = new { @class = "form-control datepicker", @required = "required", @readonly = true } })
                            @Html.ValidationMessageFor(model => model.EventStartDate, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        活動結束日期
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.EventEndDate, new { htmlAttributes = new { @class = "form-control datepicker", @required = "required", @readonly = true } })
                            @Html.ValidationMessageFor(model => model.EventEndDate, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        活動報名上限人數
