@using Action.Models
@model IEnumerable<ActionViewModel>
@{
    ViewBag.Title = "EventList";
    int count = 0;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="icon" type="image/png" href="~/Content/table/images/icons/favicon.ico" />
    <link href="../spforaction/Site.css" rel="stylesheet" type="text/css" />
    <link href="../spforaction/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="../spforaction/all.min.css" rel="stylesheet" />
    <link href="../assets/css/animate.css" rel="stylesheet" />
    <link href="~/Content/table/select2/select2.min.css" rel="stylesheet" />
    <link href="~/Content/table/perfect-scrollbar/perfect-scrollbar.css" rel="stylesheet" />
    <link href="~/Content/table/css/main.css" rel="stylesheet" />
    <link href="~/Content/table/css/util.css" rel="stylesheet" />
    <style>
        .body {
            background-color: #e2e2e2 !important;
        }

        .bg-light {
            background-color: white !important;
            border-bottom: 1px solid #aeaeae;
        }

        .container {
            width: 90% !important;
        }

        .nav-link {
            font-family: arial,"Microsoft JhengHei","微軟正黑體",sans-serif !important;
            color: #555555 !important;
        }

        .fixed-center {
            position: fixed;
            top: 60px;
            left: 50%;
            margin-left: -25px;
            margin-top: -25px;
        }
    </style>
</head>
<body style=" background-color:#f8f8f8 !important;">
    <nav class="navbar navbar-expand-md navbar-light bg-light" style="position:relative;">
        <img src="~/img/LOGO.png" />
        <img src="~/img/活動平台.jpg" style="width:80px;" class="fixed-center" />
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mr-auto"></ul>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="#">@Html.ActionLink("購物車", "ActionList")/</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">@Html.ActionLink("討論區", "ActionList")/</a>

                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">@Html.ActionLink("活動平台", "Action")/</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">@Html.ActionLink("修改資料", "ActionList")/</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">@Html.ActionLink("登出", "ActionList")</a>
                </li>
            </ul>
        </div>
    </nav>
    <h2>活動列表</h2>

    <div class="limiter">

        <div class="container-table100">
            <div class="wrap-table100">
                @*<p>
                        <a href="@Href("~/Action/Create")" class="btn btn-success">
                            <i class="fas fa-plus"></i> 新增活動
                        </a>
                    </p>*@
                <div class="table">
                    <div class="row header">
                        <div class="cell">
                            序號
                        </div>
                        <div class="cell">
                            活動照片
                        </div>
                        <div class="cell">
                            活動名稱
                        </div>
                        <div class="cell">
                            活動地點
                        </div>
                        <div class="cell">
                            活動開始日期
                        </div>
                        <div class="cell">
                            活動結束日期
                        </div>
                        <div class="cell">
                            加入Session
                        </div>
                    </div>
                    @foreach (var item in Model)
                    {
                        count++;
                        <div class="row">
                            <div class="cell">
                                @count.ToString()
                            </div>
                            <div class="cell">
                                <img width="256" height="144" src="@item.EventImage">
                            </div>
                            <div class="cell">
                                @item.EventName
                            </div>
                            <div class="cell">
                                @item.EventLocation
                            </div>
                            <div class="cell">
                                @item.EventStartDate
                            </div>
                            <div class="cell">
                                @item.EventEndDate
                            </div>

                            <div class="cell">
                                <i class="fas fa-plus"></i>@Html.ActionLink("參加", "AddToSession", new { id = item.Event_ID }, new { OnClick = "return confirm('確定加入嗎?')", @class = "btn btn-danger" })

                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
    <footer>
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </footer>
    <script src="../spforaction/modernizr-2.6.2.js"></script>
    <script src="../Scripts/jquery-3.0.0.min.js"></script>

    <script src="~/Content/table/jquery/jquery-3.2.1.min.js"></script>
    <script src="~/Content/table/bootstrap/js/popper.min.js"></script>
    <script src="../assets/js/bootstrap.min.js"></script>

    <script src="~/Content/table/select2/select2.min.js"></script>
    <script src="~/Content/table/js/main.js"></script>
    <script src="../spforaction/all.min.js"></script>
</body>
</html>

