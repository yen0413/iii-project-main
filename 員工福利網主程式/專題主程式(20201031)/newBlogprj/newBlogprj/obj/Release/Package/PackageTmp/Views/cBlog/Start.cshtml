            function sendemail() {
                var se = document.getElementById("semail");
                var count = 0;
                var she = document.getElementById("showe");
                she.value = se.value;

                for (let i = 0; i < se.value.length; i++) {
                    const c = se.value[i];
                    if (c == "@@") {
                        count++;
                    }
                    if (c == ".") {
                        count++;
                    }
                }
                if (count == 2) {
                   document.location.href = "/cBlog/SendEmail?id=" + se.value + "";
                } else {
                    alert("email格式錯誤");
                }

            }


