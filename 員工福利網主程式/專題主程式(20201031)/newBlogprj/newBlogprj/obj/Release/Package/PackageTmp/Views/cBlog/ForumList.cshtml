    <script>
        function senddata() {
            var gt = document.getElementById("get-title").value;
            var gc = document.getElementById("get-content").value;


            var xhttp = new XMLHttpRequest();
            xhttp.onload = function () {
                document.getElementById("tpl").innerHTML += xhttp.responseText;
            }
            xhttp.open("POST", "/cBlog/updateForum", true);
            xhttp.setRequestHeader('Content-Type', 'application/x-www-form-urlencoded');
            xhttp.send("gt="+gt+"&&gc="+gc);
        }
     
    </script>


