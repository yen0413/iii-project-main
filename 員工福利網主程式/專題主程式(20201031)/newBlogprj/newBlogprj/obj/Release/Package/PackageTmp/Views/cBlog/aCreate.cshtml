@using Action.Models
@model ActionViewModel
@{
                /**/

                ViewBag.Title = "Create";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/fontawesome-free-5.15.1-web/css/all.min.css" rel="stylesheet" />
    <link href="~/Content/fontawesome-free-5.15.1-web/css/fontawesome.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">

    <style>
        .body {
            background-color: #e2e2e2 !important;
        }

        .bg-light {
            background-color: white !important;
            border-bottom: 1px solid #aeaeae;
        }

        .container {
            width: 90% !important;
        }

        .nav-link {
            font-family: arial,"Microsoft JhengHei","微軟正黑體",sans-serif !important;
            color: #555555 !important;
        }

        .fixed-center {
            position: fixed;
            top: 60px;
            left: 50%;
            margin-left: -25px;
            margin-top: -25px;
        }
    </style>
</head>
<body style=" background-color:#f8f8f8 !important;">
    <nav class="navbar navbar-expand-md navbar-light bg-light" style="position:relative;">
        <img src="~/img/LOGO.png" />
        <img src="~/img/活動平台.jpg" style="width:80px;" class="fixed-center" />
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav mr-auto"></ul>
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="#">@Html.ActionLink("購物車", "ActionList")/</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">@Html.ActionLink("討論區", "ActionList")/</a>

                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">@Html.ActionLink("活動平台", "Action")/</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">@Html.ActionLink("修改資料", "ActionList")/</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">@Html.ActionLink("登出", "ActionList")</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="container body-content">

        <h2>新增</h2>

        @using (Html.BeginForm("aCreate", "cBlog", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <h4>活動</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    活動名稱<br />
                    <div class="col-md-10" style="margin-left:-10px;">
                        @Html.EditorFor(model => model.EventName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.EventName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    活動地點<br />
                    <div class="col-md-10" style="margin-left:-10px;">
                        @Html.EditorFor(model => model.EventLocation, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.EventLocation, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    活動開始日期<br />
                    <div class="col-md-10" style="margin-left:-10px;">
                        @Html.EditorFor(model => model.EventStartDate, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.EventStartDate, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    活動結束日期<br />
                    <div class="col-md-10" style="margin-left:-10px;">
                        @Html.EditorFor(model => model.EventEndDate, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.EventEndDate, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="送出" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
        <div>
            @Html.ActionLink("回到活動頁面", "Index")
        </div>
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Content/fontawesome-free-5.15.1-web/js/all.min.js"></script>
</body>
</html>

